

<%= stylesheet_link_tag  "layout", media: "all", "data-turbolinks-track" => true %>
<div class="container">

<img src="images/level/LEVEL-1.jpg">

<div class="questionscontainer">

<div class="questions">


<label for="Question">
  <p><%= @question.question %></p>

</label>
 </div>

<div class="choices">

<%= form_for(:answer, :url => pages_answer_path) do |f| %>
	<fieldset>
		<h1><%= @question.question %></h1>
		<ul>
			<% @choices.each do |choice| %>
				<li>
					<%= radio_button_tag(:choice_id, choice.id) %>
					<%= label_tag(:choice_id , choice.choice, :value => choice.id )%>
				</li>
			<% end %>
		</ul>	
		<!--- add participant id as hidden tag here to send back 
			<%= hidden_field_tag :participant_id, @participant.id %>
		-->
		<%= submit_tag "Submit" %>
<% end %>	


</div>

</div>



</div>





