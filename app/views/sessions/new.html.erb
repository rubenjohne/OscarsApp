<h1>Sign in</h1>

<%= form_for(:session, url: sessions_path) do |f| %>
	
	<%= f.label :email, class: "email" %>
	<%= f.text_field :email, class: "form-control input-small" %>
	
	<%= f.label :password %>
	<%= f.password_field :password %>
	
	<%= f.submit "Sign in" %>
	
<% end %>

<p>New user? <%= link_to "Sign up now!", signup_path %>